def file_read_write(studentrecord, modified_studentrecord):
    try:
        with open(studentrecord, 'r') as infile:
            content = infile.read()
        modified_content = modify_content(content)
        with open(modified_studentrecord, 'w') as outfile:
            outfile.write(modified_content)
        print('Student record Modified')
    except FileNotFoundError:
        print('Error: The student record does not exist.')
    except IOError:
        print('Error: Could not read/write the student.')

def ask_and_read_file():
    try:
        with open('studentrecord', 'r') as f:
            content = f.read()
        print("student recordsuccessfully read:")
        print(content)
    except FileNotFoundError:
        print('Error: The studentrecord does not exist')
    except IOError:
        print('Error: Could not read the student record')

